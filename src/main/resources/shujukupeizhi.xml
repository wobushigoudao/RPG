<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    					http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
    					http://www.springframework.org/schema/context 
    					http://www.springframework.org/schema/context/spring-context-4.0.xsd
                        ">


    <bean id="a1" class="com.alibaba.druid.pool.DruidDataSource">
        <property name="driverClassName"
                  value="com.mysql.jdbc.Driver"/>
        <property name="url"
                  value="jdbc:mysql://localhost:3306/shujuku?characterEncoding=utf8&amp;useSSL=false&amp;serverTimezone=UTC"/>
        <property name="username" value="root"/>
        <property name="password" value="Sheyuxuan@666"/>
    </bean>


    <bean id="a2" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="a1"/>
    </bean>

    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="sqlSessionFactoryBeanName" value="a2"/>
        <property name="basePackage" value="com.shujukujiekoubao"/>
    </bean>
    <context:component-scan base-package="com.diaoshujukujiekoubao"></context:component-scan>

</beans>